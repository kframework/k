#!/bin/sh
opam init
opam repository add k "$(dirname "$0")/../lib/opam" \
 || opam repository set-url k "$(dirname "$0")/../lib/opam"
opam update
opam switch create 4.03.0+k$1 --repositories k,default
opam install -y mlgmp zarith uuidm camomile atdgen atdj ctypes ctypes-foreign csv uri ocamlbuild-atdgen ocp-ocamlres
