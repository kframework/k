pipeline {
  agent { label 'docker' }
  options { ansiColor('xterm') }
  stages {
    stage('Build Anka VM') {
      options { timeout(time: 150, unit: 'MINUTES') }
      agent { label 'anka' }
      steps {
        sh '''
          package/macos/brew-install-deps
          cd haskell-backend/src/main/native/haskell-backend && stack build --only-snapshot
        '''
      }
    }
  }
}
